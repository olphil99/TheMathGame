<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/grade"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/gradeTxt"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="Grade"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/heres"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="127dp"
        android:text="Here's how you did: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timeP"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/timePerTxt"
        android:layout_marginEnd="94dp" />

    <TextView
        android:id="@+id/timePerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/correctTxt"
        android:layout_marginBottom="205dp"
        android:text="Time Per Question:" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/correct"
        android:layout_alignTop="@+id/accuracyTxt" />

    <TextView
        android:id="@+id/accuracyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/correctTxt"
        android:layout_marginBottom="256dp"
        android:text="Accuracy: " />

    <TextView
        android:id="@+id/incorrect"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/correct"
        android:layout_marginTop="253dp" />

    <TextView
        android:id="@+id/incorrectTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/correctTxt"
        android:layout_alignTop="@+id/incorrect"
        android:text="Incorrect: " />

    <TextView
        android:id="@+id/correct"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/timeP"
        android:layout_marginTop="193dp" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#ba0d0d"
        android:textStyle="bold"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Time's Up!"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/correctTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/correct"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-210dp"
        android:layout_marginStart="89dp"
        android:text="Correct: " />

    <Button
        android:id="@+id/restartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Play Again" />

    </RelativeLayout>
